{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/components/*": [
        "lib/components/*"
      ],
      "@/tokens/*": [
        "lib/tokens/*"
      ],
      "@/utils/*": [
        "lib/utils/*"
      ],
      "@/hooks/*": [
        "lib/hooks/*"
      ],
      "@/styles/*": [
        "styles/*"
      ],
      "@/src/*": [
        "src/*"
      ]
    },
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "./jest.setup.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
