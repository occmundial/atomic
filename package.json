{
  "name": "atomic",
  "version": "2.0.0",
  "private": true,
  "scripts": {
    "dev": "cross-env NODE_OPTIONS='--inspect' next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint --dir lib --dir pages",
    "test": "jest --silent",
    "postinstall": "husky install",
    "pre-commit": "lint-staged",
    "type-check": "tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch",
    "build:types": "tsc --project tsconfig.lib.json",
    "build:js": "babel lib --out-dir dist --extensions \".ts,.tsx\" --source-maps inline",
    "build:lib": "npm run build:js && npm run build:types"
  },
  "dependencies": {
    "@babel/cli": "^7.14.5",
    "@babel/core": "^7.14.6",
    "crypto-hash": "^1.3.0",
    "graphql": "^15.5.1",
    "hex-rgba": "^1.0.2",
    "next": "11.0.1",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-jss": "^10.7.1",
    "react-text-mask": "^5.4.3",
    "unorm": "^1.6.0"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.14.5",
    "@testing-library/dom": "^8.1.0",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.0.0",
    "@testing-library/user-event": "^13.1.9",
    "@types/babel__core": "^7.1.15",
    "@types/crypto-hash": "^1.1.2",
    "@types/node": "^16.0.1",
    "@types/react": "17.0.13",
    "babel-jest": "^27.0.6",
    "cross-env": "^7.0.3",
    "eslint": "7.30.0",
    "eslint-config-next": "11.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^7.0.1",
    "jest": "^27.0.6",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.2",
    "ts-node": "^10.0.0",
    "typescript": "4.3.5"
  },
  "lint-staged": {
    "**/*.{js,ts,jsx,tsx}": "eslint --fix"
  }
}
